@{
}

<body class="fixed-left">

    <div id="wrapper">

        <!-- ========== Top Bar Start ========== -->
        <partial name="~/Views/Shared/_TopBar.cshtml" />
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <partial name="~/Views/Shared/_LeftSideBar.cshtml" />
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page" style="padding-top:50px;">
            <!-- Start content -->
            <div class="content">
                <div class="container ">
                    <script>
                        @ViewBag.ArrayContas
                    </script>
                    <div class="row m-t-50 panel">
                        @foreach (ContaModel conta in ViewBag.Contas)
                        {
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <h5 class="card-title">Usuario: @ViewBag.Usuario.Nome</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Número da conta: @conta.NumeroConta</h6>
                                <canvas id="chart1_@conta.NumeroConta" width="400" height="400"></canvas>
                            </div>
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <h5 class="card-title">Usuario: @ViewBag.Usuario.Nome</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Número da conta: @conta.NumeroConta</h6>
                                <canvas id="chart2_@conta.NumeroConta" width="400" height="400"></canvas>
                            </div>
                            <div class="col-sm-12 col-md-4 col-lg-4">
                                <h5 class="card-title">Conta @conta.NumeroConta</h5>
                                <h6 class="card-subtitle mb-2 text-muted">Número da conta: @conta.NumeroConta</h6>
                                <canvas id="chart3_@conta.NumeroConta" width="400" height="400"></canvas>
                            </div>

                            <script>

                                var ctx = document.getElementById("chart1_@conta.NumeroConta").getContext('2d');
                                var myChart = new Chart(ctx, {
                                    type: 'bar',
                                    data: {
                                        labels: arrayLabel_@conta.NumeroConta,
                                        datasets: [{
                                            label: 'Balanco',
                                            data: arrayValorConta_@conta.NumeroConta,
                                            backgroundColor: arrayColor_@conta.NumeroConta,
                                            borderColor: arrayBorderColor_@conta.NumeroConta,
                                            borderWidth: 1
                                        }]
                                    },
                                    options: {
                                        scales: {
                                            yAxes: [{
                                                ticks: {
                                                    beginAtZero: true
                                                }
                                            }]
                                        }
                                    }
                                });

                                var ctx2 = document.getElementById("chart2_@conta.NumeroConta").getContext('2d');
                                var myChart = new Chart(ctx2, {
                                    type: 'doughnut',
                                    data: {
                                        labels: arrayLabel_@conta.NumeroConta,
                                        datasets: [{
                                            label: 'Balanco',
                                            data: arrayValorConta_@conta.NumeroConta,
                                            backgroundColor: arrayColor_@conta.NumeroConta,
                                            borderColor: arrayBorderColor_@conta.NumeroConta,
                                            borderWidth: 1
                                        }]
                                    }
                                });

                                var ctx3 = document.getElementById("chart3_@conta.NumeroConta").getContext('2d');
                                var myChart = new Chart(ctx3, {
                                    type: 'radar',
                                    data: {
                                        labels: arrayLabel_@conta.NumeroConta,
                                        datasets: [{
                                            label: 'teste',
                                            data: arrayValorConta_@conta.NumeroConta,
                                            backgroundColor: arrayColor_@conta.NumeroConta,
                                            borderColor: arrayBorderColor_@conta.NumeroConta,
                                            borderWidth: 1
                                        }]
                                    }
                                });
                            </script>
                        }
                    </div> <!-- end row -->
                </div> <!-- end container -->

            </div> <!-- content -->

        </div>
        <!--Right Sidebar End -->

    </div>
    <!-- END wrapper -->

    <script>
        var resizefunc = [];
    </script>

