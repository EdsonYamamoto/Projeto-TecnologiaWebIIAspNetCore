
@model ProjetoTecWebAspNetCore.Models.ContaModel

@{
    ViewData["Title"] = "IndexLogin";
}
<body class="fixed-left">

    <div id="wrapper">

        <!-- ========== Top Bar Start ========== -->
        <partial name="~/Views/Shared/_TopBar.cshtml" />
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <partial name="~/Views/Shared/_LeftSideBar.cshtml" />
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page" style="padding-top:50px;">
            <!-- Start content -->
            <div class="content">
                <div class="container ">

                    <hr />
                    <div class="row m-t-50 panel">
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <h1>Cadastrar Conta</h1>
                            <form asp-action="NovoContaPOST" method="post">
                                <div class="form-group">

                                    <label asp-for="NumeroConta" class="control-label"></label>
                                    <input asp-for="NumeroConta" class="form-control" />
                                    <span asp-validation-for="NumeroConta" class="text-danger"></span>
                                </div>

                                <input name="idUser" value="@ViewBag.Usuario.ID" type="hidden" />
                                <div class="form-group">
                                    <input type="submit" value="CadastrarBalanco" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <h1>Contas cadastradas</h1>
                            <table id="customers">
                                <tr>
                                    <td><h2>Nome</h2></td>
                                    <td><h2>Numero Conta</h2> </td>
                                </tr>
                                @foreach (ContaModel conta in ViewBag.Contas)
                                {
                                    <tr>
                                        <td> <h3>@conta.Usuario.Nome</h3> </td>
                                        <td> <h3>@conta.NumeroConta</h3> </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                </div> <!-- end container -->

            </div> <!-- content -->

        </div>
        <!--Right Sidebar End -->

    </div>
    <!-- END wrapper -->

    <script>
        var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <!--
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
        -->
    <script src="~/js/detect.js"></script>
    <script src="~/js/fastclick.js"></script>
    <script src="~/js/jquery.blockUI.js"></script>
    <script src="~/js/waves.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/jquery.scrollTo.min.js"></script>
    <script src="~/plugins/switchery/switchery.min.js"></script>

    <script type="text/javascript" src="~/plugins/parsleyjs/parsley.min.js"></script>

    <!-- App js -->
    <script src="~/js/jquery.core.js"></script>
    <script src="~/js/jquery.app.js"></script>

    <script>
        $('#btn-add-user').click(event => {
            event.preventDefault();
            console.log('clicou');
        });
    </script>

</body>
